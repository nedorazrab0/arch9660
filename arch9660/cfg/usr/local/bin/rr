#!/usr/bin/env bash
#
# Network aliases
set -e

usage() {
  echo "usage: ${0##*/} [-h] [-a] [-s] [-i] [-p]"
  echo
  echo 'network aliases'
  echo
  echo 'options:'
  echo '  -a  start networkd and resolved'
  echo '  -s  start iwd service'
  echo '  -i  run iwctl'

  exit "${1}"
}

main() {
  local OPTARG
  local arg

  # Parse args
  ((${#} == 0)) && usage 1 >&2
  while getopts 'hasip' arg; do
    case "${arg}" in
      a) systemctl start systemd-{networkd,resolved} ;;
      s) systemctl start iwd ;;
      i) iwctl ;;
      h) usage 0 ;;
      *) usage 1 >&2 ;;
    esac
  done
}

main "${@}"
